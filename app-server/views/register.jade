extends layout

block content
  .container
    h1 Register
    p.lead
      form(role='form', action='/register', method='post')
        .form-group
          label(for='name') Name
          input.form-control(type='text', id='name', name='name', placeholder='Enter your name')
        .form-group
          label(for='email') Email
          input.form-control(type='email', id='email', name='email', placeholder='Enter an email address')
        .form-group
          label(for='password') Password
          input.form-control(type='password', id='password', name='password', placeholder='Enter a password')
        .form-group
          label(for='confirm') Confirm Password
          input.form-control(type='password', id='confirm', name='confirm', placeholder='Confirm your password')
        button.btn.btn-primary(type='submit') Register
        &nbsp;
        a.btn.btn-default(role='button', href='/signin') Sign In